<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Certificates - Vidyarthi Academy</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <div class="dashboard-layout">
    <%- include('../partials/sidebar', { role: 'student' }) %>
    
    <div class="dashboard-content">
      <div class="dashboard-header">
        <h1>MY CERTIFICATES</h1>
        <div class="user-profile">
          <span id="userName"></span>
        </div>
      </div>
      
      <div class="dashboard-body">
        <!-- Certificates Grid -->
        <div class="section-card">
          <h2>EARNED CERTIFICATES</h2>
          <div id="certificatesList">
            <div class="loading">Loading certificates...</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Certificate Preview Modal -->
  <div id="certificateModal" class="modal" style="display: none;">
    <div class="modal-content modal-large">
      <div class="modal-header">
        <h2>CERTIFICATE PREVIEW</h2>
        <span class="modal-close" onclick="closeCertificateModal()">&times;</span>
      </div>
      <div class="modal-body">
        <div class="certificate-preview">
          <div class="certificate-paper">
            <div class="certificate-border">
              <div class="certificate-content">
                <h1 class="certificate-logo">VIDYARTHI ACADEMY</h1>
                <h2 class="certificate-title">CERTIFICATE OF COMPLETION</h2>
                <p class="certificate-text">This is to certify that</p>
                <h3 class="certificate-name" id="certName"></h3>
                <p class="certificate-text">has successfully completed</p>
                <h4 class="certificate-program" id="certProgram"></h4>
                <div class="certificate-details">
                  <div class="cert-detail">
                    <strong>Certificate ID:</strong>
                    <span id="certId"></span>
                  </div>
                  <div class="cert-detail">
                    <strong>Issue Date:</strong>
                    <span id="certDate"></span>
                  </div>
                  <div class="cert-detail">
                    <strong>Verification Code:</strong>
                    <span id="certCode"></span>
                  </div>
                </div>
                <div class="certificate-qr">
                  <div id="qrCode">QR CODE</div>
                </div>
                <div class="certificate-signature">
                  <div class="signature-line">
                    <span>Authorized Signature</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button onclick="downloadCertificate()" class="btn btn-primary">Download PDF</button>
        <button onclick="closeCertificateModal()" class="btn btn-secondary">Close</button>
      </div>
    </div>
  </div>
  
  <script src="/js/main.js"></script>
  <script>
    checkAuth('student');
    const user = JSON.parse(localStorage.getItem('user'));
    document.getElementById('userName').textContent = user.name;
    
    let currentCertificate = null;
    
    // Load certificates
    async function loadCertificates() {
      try {
        const data = await apiCall('/api/student/certificates');
        displayCertificates(data.data);
      } catch (error) {
        console.error('Error loading certificates:', error);
        document.getElementById('certificatesList').innerHTML = '<p class="error">Failed to load certificates</p>';
      }
    }
    
    // Display certificates
    function displayCertificates(data) {
      const container = document.getElementById('certificatesList');
      
      if (data.length === 0) {
        container.innerHTML = `
          <div class="no-data">
            <p>You haven't earned any certificates yet.</p>
            <p>Complete internships and training programs to earn certificates!</p>
          </div>
        `;
        return;
      }
      
      container.innerHTML = `
        <div class="certificates-grid">
          ${data.map(cert => `
            <div class="certificate-card">
              <div class="certificate-icon">ðŸŽ“</div>
              <h3>${cert.title}</h3>
              <p class="cert-type">${cert.type.toUpperCase()}</p>
              <div class="cert-info">
                <p><strong>Certificate ID:</strong> ${cert.certificateId}</p>
                <p><strong>Issued:</strong> ${formatDate(cert.issueDate)}</p>
              </div>
              <div class="cert-actions">
                <button onclick='viewCertificate(${JSON.stringify(cert)})' class="btn btn-primary btn-small">View</button>
                <button onclick="downloadCertificate('${cert._id}')" class="btn btn-secondary btn-small">Download</button>
              </div>
            </div>
          `).join('')}
        </div>
      `;
    }
    
    // View certificate
    function viewCertificate(cert) {
      currentCertificate = cert;
      document.getElementById('certName').textContent = user.name;
      document.getElementById('certProgram').textContent = cert.title;
      document.getElementById('certId').textContent = cert.certificateId;
      document.getElementById('certDate').textContent = formatDate(cert.issueDate);
      document.getElementById('certCode').textContent = cert.verificationCode;
      document.getElementById('certificateModal').style.display = 'flex';
    }
    
    // Close certificate modal
    function closeCertificateModal() {
      document.getElementById('certificateModal').style.display = 'none';
      currentCertificate = null;
    }
    
    // Download certificate (placeholder)
    function downloadCertificate(certId) {
      alert('Certificate download feature - Integration with PDF generation needed');
      // TODO: Implement PDF download using PDFKit
    }
    
    // Initial load
    loadCertificates();
  </script>
  
  <style>
    .certificates-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: var(--spacing-md);
    }
    
    .certificate-card {
      border: 2px solid var(--color-primary);
      padding: var(--spacing-md);
      background: var(--color-secondary);
      box-shadow: var(--shadow-solid);
      text-align: center;
      transition: all 0.2s;
    }
    
    .certificate-card:hover {
      transform: translate(-2px, -2px);
      box-shadow: var(--shadow-solid-hover);
    }
    
    .certificate-icon {
      font-size: 48px;
      margin-bottom: var(--spacing-sm);
    }
    
    .certificate-card h3 {
      margin-bottom: var(--spacing-xs);
      font-size: 18px;
    }
    
    .cert-type {
      background: var(--color-primary);
      color: var(--color-secondary);
      display: inline-block;
      padding: 4px 12px;
      font-size: 12px;
      font-weight: 600;
      margin-bottom: var(--spacing-sm);
    }
    
    .cert-info {
      text-align: left;
      margin-bottom: var(--spacing-md);
      font-size: 14px;
    }
    
    .cert-info p {
      margin-bottom: var(--spacing-xs);
    }
    
    .cert-actions {
      display: flex;
      gap: var(--spacing-sm);
    }
    
    .btn-small {
      padding: 8px 16px;
      font-size: 12px;
      flex: 1;
    }
    
    .modal-large {
      max-width: 900px;
    }
    
    .certificate-preview {
      padding: var(--spacing-md);
      background: var(--color-gray-light);
    }
    
    .certificate-paper {
      background: white;
      padding: var(--spacing-md);
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }
    
    .certificate-border {
      border: 8px double var(--color-primary);
      padding: var(--spacing-xl);
    }
    
    .certificate-content {
      text-align: center;
    }
    
    .certificate-logo {
      font-size: 24px;
      margin-bottom: var(--spacing-md);
      letter-spacing: 0.2em;
    }
    
    .certificate-title {
      font-size: 32px;
      margin-bottom: var(--spacing-lg);
      text-decoration: underline;
    }
    
    .certificate-text {
      font-size: 16px;
      margin-bottom: var(--spacing-xs);
    }
    
    .certificate-name {
      font-size: 36px;
      margin: var(--spacing-md) 0;
      text-transform: uppercase;
      border-bottom: 2px solid var(--color-primary);
      display: inline-block;
      padding-bottom: var(--spacing-xs);
    }
    
    .certificate-program {
      font-size: 24px;
      margin: var(--spacing-md) 0;
      font-style: italic;
    }
    
    .certificate-details {
      margin: var(--spacing-lg) 0;
      display: flex;
      justify-content: space-around;
      flex-wrap: wrap;
      gap: var(--spacing-md);
    }
    
    .cert-detail {
      text-align: center;
    }
    
    .certificate-qr {
      margin: var(--spacing-lg) 0;
    }
    
    #qrCode {
      width: 100px;
      height: 100px;
      border: 2px solid var(--color-primary);
      margin: 0 auto;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 10px;
      font-weight: 600;
    }
    
    .certificate-signature {
      margin-top: var(--spacing-xl);
      display: flex;
      justify-content: center;
    }
    
    .signature-line {
      border-top: 2px solid var(--color-primary);
      padding-top: var(--spacing-xs);
      width: 200px;
      text-align: center;
      font-size: 12px;
    }
  </style>
</body>
</html>
